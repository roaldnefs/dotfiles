" Disable key movement in all modes
noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>

" Set color scheme
colorscheme one
set background=light
highlight Normal ctermbg=None
" Allow italic fonts. This might require additional configuration for the
" terminal and applications, see:
" https://alexpearce.me/2014/05/italics-in-iterm2-vim-tmux/
let g:one_allow_italics = 1
highlight Comment cterm=italic gui=italic

" Airline
let g:airline_theme = 'one'
let g:airline_powerline_fonts = 1
let g:airline_skip_empty_sections = 1

let g:airline_left_sep = ''
let g:airline_right_sep = ''

" Airlne tabline
let g:airline#extensions#tabline#enabled = 1

" Statusbar
set laststatus=2

" NERDTree
let NERDTreeQuitOnOpen=1
let NERDTreeShowHidden=1

" Hightlight the 81st column on lines that go over the 80-character maximum.
" Snippet taken from 'More Instantly Better Vim' as OSCON 2013, see:
"   https://www.youtube.com/watch?v=aHm36-na4-4
highlight ColorColumn ctermbg=gray
call matchadd('ColorColumn', '\%81v', 100)

" Turn hybrid line numbers.
set number relativenumber
