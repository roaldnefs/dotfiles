#!/bin/zsh

export DOCKER_REPO_PREFIX=roaldnefs

valgrind(){
	docker run -it --rm \
		-v "$(pwd):/home/valgrind" \
		-w /home/valgrind \
		${DOCKER_REPO_PREFIX}/valgrind "$@"
}

icmbuild(){
	docker run -it --rm \
		-v "$(pwd):/home/icmake" \
		-w /home/icmake \
		--entrypoint icmbuild \
		${DOCKER_REPO_PREFIX}/icmake "$@"
}

icmstart(){
	docker run -it --rm \
		-v "$(pwd):/home/icmake" \
		-w /home/icmake \
		--entrypoint icmstart \
		${DOCKER_REPO_PREFIX}/icmake "$@"
}
